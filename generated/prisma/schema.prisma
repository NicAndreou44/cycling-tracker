generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ride {
  id               Int       @id @default(autoincrement())
  name             String
  distanceKm       Int       @map("distance_km")
  createdAt        DateTime? @default(now()) @map("created_at") @db.Timestamp(6)
  duration_minutes Int?
  type             String?
  notes            String?

  @@map("rides") // maps this model back to the original "rides" table
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  @@map("users") // keeps the underlying table name as "users"
}
